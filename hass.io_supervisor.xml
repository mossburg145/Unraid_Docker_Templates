<?xml version="1.0"?>
<Container version="2">
  <Name>HASSIO Supervisor</Name>
  <Repository>homeassistant/amd64-hassio-supervisor</Repository>
  <Registry>https://registry.hub.docker.com/u/homeassistant/home-assistant/</Registry>
  <Network>host</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>true</Privileged>
  <Support>https://home-assistant.io/help/</Support>
  <Project>https://home-assistant.io</Project>
  <Overview>First private cloud OS for home automation.</Overview>
  <Category>HomeAutomation</Category>
  <WebUI>http://[IP]:[PORT:8123]</WebUI>
  <TemplateURL/>
  <Icon>https://raw.githubusercontent.com/balloob/unraid-docker-templates/master/balloob/home-assistant-icon.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled>1547403962</DateInstalled>
  <DonateText/>
  <DonateLink/>
  <Description>First private cloud OS for home automation.</Description>
  <Networking>
    <Mode>host</Mode>
    <Publish/>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/etc/locatetime</HostDir>
      <ContainerDir>/etc/locatetime</ContainerDir>
      <Mode>ro</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/hassio</HostDir>
      <ContainerDir>/data</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/var/run/dbus</HostDir>
      <ContainerDir>/var/run/dbus</ContainerDir>
      <Mode>rw</Mode>
    <Volume>
      <HostDir>/var/run/docker.sock</HostDir>
      <ContainerDir>/var/run/docker.sock</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Environment/>
  <Labels/>
  <Config Name="Config Directory" Target="/config" Default="/mnt/user/appdata/HASS.IO" Mode="rw" Description="This path is where Home Assistant will store it's configuration files." Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/hassio</Config>
</Container>
